/* pages/authentication/authentication.wxss */
page {
  background: #f7f8fa;
}

.authLine:nth-child(1) {
  border-top: 0;
}

.authLine {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-top: 1rpx solid #e5e5e5;
  box-sizing: border-box;
  background: #ffffff;
}

.authLine text {
  width: 252rpx;
  height: 90rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 90rpx;
  float: left;
  box-sizing: border-box;
  padding-left: 32rpx;
}

.placeholderClass {
  font-size: 28rpx;
  color: #999999;
}

.authLine input {
  float: left;
  /* display: inline-block; */
  height: 90rpx;
  border: 0;
  outline: none;
  line-height: 90rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  padding: 0 20rpx;
  width: 498rpx;
  box-sizing: border-box;
}


.yzCode {
  width: 337rpx !important;
}

.authLine .sendCode {
  display: inline-block;
  margin-top: 24rpx;
  width: 220rpx;
  height: 42rpx;
  line-height: 42rpx;
  float: left;
  text-align: center;
  border-left: 1rpx solid #e5e5e5;
  padding: 0;
  cursor: pointer;
  color: #999999;
}

.authLine .active {
  color: #FF932E;
}

.supplyBtn {
  width: 670rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #c2c2c2;
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 40rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  margin: 100rpx 40rpx 40rpx 40rpx;
}

.btn .active {
  background: linear-gradient(to right ,#ffb31e, #ff813a);
  color: #ffffff;
}

.refuse{
  width: 670rpx;
height: 90rpx;
border: 1rpx solid #999999;
border-radius: 50rpx;
margin: 0 40rpx;
text-align: center;
line-height: 90rpx;
font-size: 40rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
color: #999999;
}
/* 选择性别 */
.authLine .sex{
  display: inline-block;
  width: 400rpx;
  float: left;
  padding-left: 20rpx;
}
.page-section{
  width: 350rpx;
  height: 90rpx;
}
.page-section view{
  display: inline-block;
}
.page-section label{
  margin-right: 80rpx;
  font-size: 28rpx;
}
