/* pages/programme/programme.wxss */
.container {
  box-sizing: border-box;
  position: relative;
  padding: 0 !important;
  background: #EDEDED;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #EDEDED;
  z-index: 2;
  box-shadow: 0px 1px 4px 0px rgba(0,0,0,0.1);
}

.title-bar {
  display: flex;
  align-items: center;
}

.title-bar>view {
  height: 60rpx;
  width: 460rpx;
  background: #fff;
  border-radius: 30rpx;
  float: left;
  line-height: 60rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.back {
  width: 18rpx;
  height: 30rpx;
  display: inline-block;
  padding: 20rpx;
  margin-left: 12rpx;
}

.evahospital {
  width: 610rpx;
  text-align: center;
  opacity: 1;
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 0rpx;
}


page{
  background: #F5F5F5;
}
.topbg{
  width: 750rpx;
  height: 388rpx;
  /* opacity: 0.5; */
  background: #5f4e4e;
  box-sizing: border-box;
  background-size: 100% 100%;
}
.name{
  padding-top: 27rpx;
  margin: 0 0 4rpx 50rpx;
height: 56rpx;
font-size: 40rpx;
font-family: PingFangSC, PingFangSC-Medium;
font-weight: 500;
text-align: left;
color: #ffffff;
line-height: 56rpx;
}
.age{
height: 42rpx;
font-size: 30rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: left;
color: #ffffff;
line-height: 42rpx;
}
.age text{
  display: inline-block;
  margin-left: 50rpx;
}
.programmeDetail{
  margin-top: 45rpx;
  height: 68rpx;
  width: 100%;
}
.programmeDetail>view{
  width: 374rpx;
  text-align: center;
  display: inline-block;
}
.programmeDetail>view:nth-child(1){
  border-right: 2rpx solid #999999;
}
.programmeDetail>view text{
  padding: 0 30rpx;
  display: block;
height: 33rpx;
opacity: 0.9;
font-size: 24rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: center;
color: #ffffff;
line-height: 33rpx;
}
.details{
  width: 750rpx;
/* height: 932rpx; */
height: auto;
min-height: 200rpx;
margin-top: 32rpx;
background: #f5f5f5;
border-radius: 30rpx 30rpx 0px 0px;
}
/* detail的tabbar */
.navbar{
  width: 100%;
  flex: none;
  display: flex;
  /* background: #fff; */
    height: 44rpx;
    padding-top: 58rpx;
    /* position: fixed; */
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 30rpx;
  color: #666666;
  font-size: 34rpx;
  font-family: PingFamhSc-Regular;
}
.navbar .item.active{
  color: #333333;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  /* bottom: 0; */
  top: 56rpx;
  left: 65rpx;
  right: 65rpx;
  width:57rpx;
  height: 6rpx;
  border-radius: 6rpx;
  background: #FFCC49;
}
.detailContent{
  padding-top: 50rpx;
}
.detailContent>image{
  width: 686rpx;
height: auto;
margin:0 32rpx 24rpx;
}
.detailContent>image:last-child{
  margin-bottom: 100rpx;
}

.askbg{
  position: fixed;
  bottom: 0;
  left: 0;
  margin: 0;
  width: 750rpx;
height: 100rpx;
background: #feeab6;
font-size: 36rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: center;
color: #0f0f0d;
line-height: 100rpx;

}


.askbg button:not([size='mini']){
  width: 750rpx;
  height: 100rpx;
  background: #feeab6;
  margin: 0;
  font-size: 36rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #0f0f0d;
  line-height: 100rpx;
  padding: 0;
}

/* 背景资料 */
.detailContentOne{
  width: 686rpx;
  margin: 0 32rpx 24rpx;
  border-radius: 10rpx;
  background: #ffffff;
  padding: 40rpx 24rpx 60rpx;
  box-shadow:0 2rpx 14rpx 0 rgba(0,0,0,0.06) ;
  box-sizing: border-box;
  border: 0;
}
.detailContentOne>text{
  font-size: 32rpx;
  line-height: 32rpx;
  color: rgba(51, 51, 51, 1);
  display: block;
  margin-bottom: 20rpx;
}
.detailContentOne>view{
  font-size: 24rpx;
  color: rgb(102,102,102);
  line-height: 48rpx;
}
.detailContentOne>view text:nth-child(1){
  color: rgb(66,66,66);
}