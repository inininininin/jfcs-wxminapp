.popWindow {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 2;
  background: rgba(0, 0, 0, 0.2);
  top: 0;
  left: 0;
}

.popWindow>view {
  width: 640rpx;
  height: 800rpx;
  margin: 300rpx 55rpx;
  border-radius: 8rpx;
  background: #fff;
}

