<!--pages/authentication/authentication.wxml-->
<view class="authLine" style="margin-top:20rpx">
  <text>姓名：</text>
  <input bindinput="nameSure" placeholder="请输入真实姓名" type="text" maxlength="12" placeholder-class="placeholderClass"></input>
</view>
<view class="authLine">
  <text>性别：</text>
  <!-- <input placeholder="请输入真实姓名" placeholder-class="placeholderClass"></input> -->
  <view class="sex">
    <view class="page-section">
    <view class="weui-cells weui-cells_after-title">
      <radio-group bindchange="radioChange">
        <label class="weui-cell weui-check__label" wx:for="{{items}}" wx:key="{{item.value}}">
          <view class="weui-cell__hd">
            <radio value="{{item.value}}" />
          </view>
          <view class="weui-cell__bd">{{item.name}}</view>
        </label>
      </radio-group>
    </view>
    </view>
  </view>
</view>
<view class="authLine">
  <text>年龄</text>
  <input bindinput="ageSure" placeholder="请输入年龄" type="number" maxlength="3" placeholder-class="placeholderClass"></input>
</view>
<view class="authLine">
  <text>所在地区：</text>
  <!-- <view class="bindMultiPickerChange" bindtap="bindMultiPickerColumnChange">选择省、市</view> -->
  <picker wx:if='{{picker}}' style="color:#999" mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">                 
  <view class="picker">{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}} </view>          
  </picker>
  <picker wx:if='{{!picker}}' style="color:#333" mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">                 
  <view class="picker" >{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}} </view>          
  </picker>
  <!-- <input placeholder="请输入真实姓名" placeholder-class="placeholderClass"></input> -->
</view>

<view class="authLine" style="margin-top:20rpx;border-top:0">
  <text>手机号：</text>
  <input class="phone" bindinput="phoneSure" placeholder="请填写手机号" type="number" maxlength="12" placeholder-class="placeholderClass"></input>
</view>
<view class="authLine">
  <text>验证码：</text>
  <input  class="yzCode" placeholder="请输入验证码" type="text" maxlength="12" placeholder-class="placeholderClass"></input>
  <text wx:if='{{sendCode}}' class="sendCode" data-text='{{sendtext}}'  bindtap="sendCodeNo">获取验证码</text>
  <text wx:if='{{!sendCode}}' class="sendCode active" bindtap="sendCodeYes">获取验证码</text>
</view>

<view class="btn">
  <view  wx:if='{{supplyIf}}' bindtap="supplyNo" class="supplyBtn">提交认证</view>
  <view  wx:if='{{!supplyIf}}' bindtap="supplyYes" class="supplyBtn active">提交认证</view>
  <view class="refuse">取消</view>
</view>